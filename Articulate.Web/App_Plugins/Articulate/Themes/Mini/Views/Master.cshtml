    <!-- RSS -->
    @*{{ghost_head}}*@

</head>

<body class="@ViewBag.CssBodyClass">

    @RenderBody()

    @*
        <!--[if lt IE 9 ]>
            <script src="/assets/js/polyfills/selectivizr.min.js"></script>
