@using ClientDependency.Core.Mvc
@using Articulate;
@model Articulate.Models.Post

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@Model.Content.Name - @Model.BlogTitle</title>

    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

    @{ Html
           .RequiresThemedCssFolder(Model)
           .RequiresThemedJsFolder(Model);
    }

    @Html.RenderCssHere()

    @*{{#if pagination.next}}<link href="{{pageUrl pagination.next}}" rel="prefetch" />{{/if}}
    {{ghost_head}}*@

</head>
@*<body class="{{body_class}}">*@
<body>

    <header id="site-head">
        
        @*{{#if @blog.logo}}
        <a id="blog-logo" href="{{@blog.url}}">
            <div class="bloglogo" style="background: url({{@blog.logo}})"></div>
        </a>
        {{/if}}*@

        <h1 class="blog-title">
            <a href="@Model.Content.Parent.Parent.Url">
                @Model.BlogTitle
            </a>
        </h1>
        
        @Html.ThemedPartial(Model, "HeaderDescription")
        @Html.ThemedPartial(Model, "Menu")

    </header>

    @RenderBody()

    <footer class="site-footer">
        <div class="inner">
            
            @Html.ThemedPartial(Model, "FooterDescription")

            <section class="copyright">
                &copy; @DateTime.Now.ToString("yyyy")
                <a href="/">@Model.BlogTitle</a>. All rights reserved.
            </section>
            <section>Vapor theme by <a href="http://sethlilly.com/">Seth Lilly</a></section>
            
        </div>
    </footer>

    @*{{ghost_foot}}*@
    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    @Html.RenderJsHere()

</body>
</html>
